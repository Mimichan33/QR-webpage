<body>

  <!-- ハンバーガーアイコン -->
  <button class="hamburger" onclick="toggleDrawer()">☰</button>

  <!-- オーバーレイ -->
  <div class="overlay" id="overlay" onclick="toggleDrawer()"></div>

  <!-- ドロワーメニュー -->
  <div class="drawer" id="drawer">
    <a href="index.html">🏠 ホーム</a>

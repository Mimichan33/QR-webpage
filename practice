    }

    /* ドロワーメニュー */
    .drawer {
      position: fixed;
      top: 0;
      left: -250px;
      width: 250px;
      height: 100%;
      background-color: #444;
      color: white;
      transition: left 0.3s ease;
      padding-top: 60px;
      box-shadow: 2px 0 5px rgba(0,0,0,0.3);
      z-index: 1000;
    }

    .drawer.open {
      left: 0;
    }

    .drawer a {
      display: block;
      padding: 12px 24px;
      color: white;
      text-decoration: none;
      border-bottom: 1px solid #666;
    }

    .drawer a:hover {
      background-color: #555;
    }

    /* オーバーレイ */
    .overlay {
      position: fixed;
      top: 0;
      left: 0;
      height: 100%;
      width: 100%;
      background-color: rgba(0,0,0,0.4);
      z-index: 999;
      display: none;
    }

    .overlay.show {
      display: block;
    }

